<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08e1e9"
    tools:context="com.normtechnologies.replicator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0044ff"
        android:text="enter the text you want to replicate"
        android:textSize="20dp"
        android:id="@+id/text1"
        android:paddingTop="10dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:background="#fff"
        android:maxLines="2"
        android:id="@+id/etext"
        android:hint="enter the text here"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0044ff"
        android:layout_centerHorizontal="true"
        android:text="number of times to be replicated"
        android:layout_below="@id/etext"
        android:id="@+id/number"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number"
        android:inputType="number"
        android:background="#fff"
        android:maxLines="2"
        android:id="@+id/etext2"
        android:hint="howmany times?"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butt"
        android:background="#f200ff"
        android:paddingTop="5dp"
        android:text="replicate"
        android:layout_below="@+id/etext2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="results"
        android:background="#fff"
        android:id="@+id/results"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textIsSelectable="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/butt"
        android:layout_alignLeft="@+id/etext2"
        android:layout_alignStart="@+id/etext2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/results"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btncopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="copy" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"
            android:layout_weight="1"
            android:id="@+id/btnshare"
            />
    </LinearLayout>

</RelativeLayout>
